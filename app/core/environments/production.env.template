# App configuration
APP_NAME=ChromaPages AI Customer Service
APP_VERSION=1.0.0
APP_ENV=production
DEBUG=false

# API configuration
API_PREFIX=/api
# Replace with your allowed origins, comma-separated
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Authentication configuration
# Generate a secure SECRET_KEY and set it here
# SECRET_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
API_KEY_HEADER=X-API-Key

# Rate limiting configuration
RATE_LIMIT_ENABLED=true

# Gemini API configuration
# Add your production API key here
# GOOGLE_API_KEY=
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40
GEMINI_MAX_OUTPUT_TOKENS=1024

# Database configuration
# Update with your production database credentials
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=customer_service_db
DB_USER=your-db-user
# DB_PASSWORD=

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json 