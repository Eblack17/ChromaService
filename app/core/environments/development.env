# App configuration
APP_NAME=ChromaPages AI Customer Service
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# API configuration
API_PREFIX=/api
CORS_ORIGINS=*

# Authentication configuration
# SECRET_KEY will be auto-generated if not set
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
API_KEY_HEADER=X-API-Key

# Rate limiting configuration
RATE_LIMIT_ENABLED=true

# Gemini API configuration
# GOOGLE_API_KEY= # Add your API key here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40
GEMINI_MAX_OUTPUT_TOKENS=1024

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=customer_service_db
DB_USER=postgres
# DB_PASSWORD= # Add your database password here 